WindowManager:
    Acceuil:
    SauvegardeJoueur:
    Theme:
    Histoire:
    Geographie:
    Informatique


<Acceuil>:

    name: "Acceuil"
    BoxLayout:
        orientation:'horizontal'
        padding:10
        canvas.before:
            Rectangle:
                size:self.size
                source:'Quizz_generale.jpg'

        Button:
            text: "Jouer"
            on_release:
                app.root.current = "SauvegardeJoueur"
                root.manager.transition.direction = "left"

            bold:True
            font_size: 0.75 * self.height
            size_hint:0.4,0.3
            color:0,0,0,1
            background_normal:'Bouton_fond_blanc.png'
            background_down:'Bouton_fond_blanc.png'


<SauvegardeJoueur>:
    name : "SauvegardeJoueur"


    FloatLayout:
        Label:
            text : "Nom: "
            size_hint : 0.2, 0.1
            pos_hint : {"x":0.25, "top":0.9}
        TextInput:
            id : nom
            multiline : False
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.45, "top" : 0.9}
        Label:
            text : "Prénom :  "
            size_hint : 0.2, 0.1
            pos_hint : {"x" : 0.25, "top" : 0.7}
        TextInput:
            id : prenom
            multiline : False
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.45, "top" : 0.7}
        Label:
            text : "Pseudo: "
            size_hint : 0.2, 0.1
            pos_hint : {"x" : 0.25, "top" : 0.5}
        TextInput:
            id : pseudo
            multiline : False
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.45, "top" : 0.5}
        Button:
            text : "Sauvez et lancer la quizz"
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.39, "top" : 0.28}
            on_release:

                app.root.current = "Theme"
                root.manager.transition.direction = "left"



<Theme>:

    name: 'Theme'

    Label:
        text : 'Veuillez choisir un thème : ) '

    BoxLayout:
        orientation: 'horizontal'

        Button:

            text: 'Geographie'
            on_release:
                app.root.current = "Geographie"
                root.manager.transition.direction = "left"

            bold:True
            font_size: 15
            size_hint:0.25,0.3
            color:0,0,0,1
            background_normal:'geographie.jpg'
            background_down:'geographie.jpg'


        Button:

            text: 'Histoire'
            on_release:
                app.root.current = "Histoire"
                root.manager.transition.direction = "left"

            bold:True
            font_size: 15
            size_hint:0.25,0.3
            color:0,0,0,1
            background_normal:'histoire.png'
            background_down:'histoire.png'

        Button:

            text: 'Informatique'
            on_release:
                app.root.current = "Informatique"
                root.manager.transition.direction = "left"

            bold:True
            font_size: 14
            size_hint:0.25,0.3
            color:0,0,0,1
            background_normal:'informatique.jpg'
            background_down:'informatique.jpg'









<Histoire>:
    name : "Histoire"
    BoxLayout:
        orientation: 'vertical'
        id : zone_questions_histoire

        Button:
            id: lancement_questions_histoires
            text: 'Lancement des questions histoire'
            bold:True
            font_size: 15

            size_hint_x: 0.4
            pos_hint: {'x': 0}


            on_release: root.lancement_question()

<Geographie>:
    name : "Geographie"
    BoxLayout:
        orientation: 'vertical'
        id : zone_questions_geographie

        Button:
            id: lancement_questions_geographie

            text: 'Lancement des questions de géographie'
            bold:True
            font_size: 15

            size_hint_x: 0.4
            pos_hint: {'x': 0}

            on_release: root.lancement_question()






<Informatique>:
    name : "Informatique"

    BoxLayout:
        orientation: 'vertical'
        id : zone_questions_informatique

        Button:
            id: lancement_questions_informatique
            text: 'Lancement des questions de informatique'
            bold:True
            font_size: 15

            size_hint_x: 0.4
            pos_hint: {'x': 0}


            on_release: root.lancement_question()



















